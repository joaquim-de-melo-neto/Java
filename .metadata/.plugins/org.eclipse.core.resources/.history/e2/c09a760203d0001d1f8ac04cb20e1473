package poker;

import java.util.Arrays;

public class Player {
	private Card[] hand;

	public Player(Card[] hand) {
		this.hand = hand;
	}
// checa por um par
	public String checkPair(Card[] hand) {
		Arrays.sort(hand);
		for (int outer = 0; outer < hand.length - 2; outer++) {
			for (int inner = outer+1; inner < hand.length; inner++) {

				if (hand[outer].getFace().equals(hand[inner].getFace()))
					return String.format("I have a pair of %s", hand[inner].getFace());
			}
		}
		return null;

	}
}
